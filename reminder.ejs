<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medicine Reminder Alarm</title>
    <style>
       html, body {
            height: 100%; 
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .container {
            max-width: 400px;
            margin: auto;
            margin-bottom: 100px;
            margin-top: 100px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 2px 2px 10px rgba(0,0,0,0.1);
            flex: 1;
        }

        input, button {
            margin-top: 10px;
            padding: 8px;
            width: 100%;
            box-sizing: border-box;
        }

        .alarm-active {
            color: red;
            font-weight: bold;
            font-size: 18px;
        }

        #stopAlarmBtn {
            display: none;
            background-color: red;
            color: white;
            font-weight: bold;
        }

        .notification {
            position: fixed;
            top: 20px;
            background-color: #4CAF50;
            color: white;
            padding: 15px 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            transition: right 0.5s ease-in-out;
        }

        .navbar {
            background-color: #2ecc71;
            padding: 9px 20px;
            text-align: center;
            position: sticky;
            top: 0;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .navbar ul {
            list-style: none;
            padding: 0;
        }

        .navbar ul li {
            display: inline;
            margin-right: 30px;
        }

        .navbar ul li a {
            text-decoration: none;
            color: #fff;
            font-size: 1.2em;
            font-weight: 600;
            transition: color 0.3s ease;
        }

        .navbar ul li a:hover {
            color: #3498db;
        }

        footer {
            background-color: #2ecc71;
            color: #fff;
            text-align: center;
            padding: 30px;
            margin-top: auto;
        }

        footer p {
            font-size: 1em;
            margin: 0;
        }

        footer a {
            color: #0dcaf0;
            text-decoration: none;
            font-weight: 600;
        }

        footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="#products">Products</a></li>
            <li><a href="/features">Features</a></li>
            <li><a href="/reminder">My Reminders</a></li>
            <li><a href="/contact">Contact</a></li>
            <li><a href="/map">Map</a></li>
        </ul>
    </nav>
    <div class="container">
        <% if (typeof(message) != "undefined") { %>
            <div id="notification" class="notification">
                <%= message %>
            </div>
        <% } %>
        
    <form method = "post" action = "setReminder">
        <h2 style="font-family: 'Times New Roman', Times, serif;">Set Your Medicine Reminder</h2>
        <input type="text" name="medicine" placeholder="Enter Medicine Name" required>
        <input type="email" name="email" placeholder="Enter Email Address" required>
        <input type="datetime-local" name="datetime" required>
        <button onclick="setReminder()">Set Reminder</button>
        <ul id="reminderList"></ul>
        <p id="alarmStatus"></p>
        <button id="stopAlarmBtn" onclick="stopAlarm()">Stop Alarm</button>
    </form>
    </div>
    <footer>
        <p>&copy; 2024 Medicompare. All Rights Reserved.</p>
    </footer>

    <!-- Alarm Sound -->
    <audio id="alarmSound" src="https://www.zedge.net/ringtones?keyword=alarm%20sound"></audio>

    <script>
        function setReminder() {
            let medicine = document.getElementById("medicineName").value;
            let time = document.getElementById("reminderTime").value;

            if (medicine && time) {
                let reminders = JSON.parse(localStorage.getItem("reminders")) || [];
                reminders.push({ medicine, time });
                localStorage.setItem("reminders", JSON.stringify(reminders));
                displayReminders();
                alert("Reminder Set Successfully!");
            } else {
                alert("Please enter both medicine name and time.");
            }
        }

        function displayReminders() {
            let reminderList = document.getElementById("reminderList");
            reminderList.innerHTML = "";
            let reminders = JSON.parse(localStorage.getItem("reminders")) || [];

            reminders.forEach((reminder, index) => {
                let li = document.createElement("li");
                li.innerHTML = `${reminder.medicine} at ${new Date(reminder.time).toLocaleString()} 
                    <button onclick="deleteReminder(${index})">Delete</button>`;
                reminderList.appendChild(li);
            });
        }

        function deleteReminder(index) {
            let reminders = JSON.parse(localStorage.getItem("reminders")) || [];
            reminders.splice(index, 1);
            localStorage.setItem("reminders", JSON.stringify(reminders));
            displayReminders();
        }

        function checkReminders() {
            let now = new Date();
            let reminders = JSON.parse(localStorage.getItem("reminders")) || [];

            reminders.forEach((reminder, index) => {
                let reminderTime = new Date(reminder.time).getTime();
                if (now.getTime() >= reminderTime) {
                    triggerAlarm(reminder.medicine);
                    reminders.splice(index, 1); // Remove after alarm triggers
                    localStorage.setItem("reminders", JSON.stringify(reminders));
                    displayReminders();
                }
            });
        }

        function triggerAlarm(medicine) {
            document.getElementById("alarmStatus").innerHTML = `‚è∞ Time to take <span class="alarm-active">${medicine}</span>!`;
            document.getElementById("stopAlarmBtn").style.display = "block";
            let alarm = document.getElementById("alarmSound");
            alarm.loop = true;
            alarm.play();
        }

        function stopAlarm() {
            let alarm = document.getElementById("alarmSound");
            alarm.pause();
            alarm.currentTime = 0;
            document.getElementById("alarmStatus").innerHTML = "";
            document.getElementById("stopAlarmBtn").style.display = "none";
        }

        // Check reminders every second
        setInterval(checkReminders, 1000);
        displayReminders();
    </script>

</body>
</html>
